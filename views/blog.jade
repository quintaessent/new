extends layout

block content
	section#blog-home.page-block
		.container
			.text-header
				.row
					h4.col-md-6
						| Suspendisse pharetra aliquam diam, et cursus erat mattis sed. Aenean vestibulum viverra ex ac convallis.
			.row
				// Blog Entries Column
				.col-md-8
					// First Blog Post
					.posts
						each post in posts
							.posts
								img.img-responsive(src='/assets/images/blog-img/'+post.image, alt='')
								h4.blog-post-title
									a(href='/blog/'+post.slug)= post.header
								p.date-post= post.data
								p= post.shortText
								.read-more
									a(href='/blog/'+post.slug)
										| Read More
										i.fa.ion-ios-arrow-thin-right
					// Pager
					ul.pager
						li.previous
							a(href='blog-home.html')
								i.fa.ion-ios-arrow-thin-left
								| Previous Page
						li.next
							a(href='blog-home.html')
								| Next page
								i.fa.ion-ios-arrow-thin-right
				// Blog Sidebar Widgets Column
				.col-md-4
					.blog-sidebar
						// Blog Search Well
						.input-group
							input.form-control(type='text', placeholder='Search')
							span.input-group-btn
								button.btn.btn-default(type='button')
									span.fa.ion-ios-search
						// /.input-group
						.blog-about-me
							img.img-responsive(src='/assets/images/blog-img/02.jpg', alt='')
							h4 About me
							p
